<form class="form-horizontal" role="form" {{action "create" on="submit"}}>
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=controller.title placeholder="Title Article" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{input type="text" value=controller.description placeholder="Description" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Content</label>
    <div class="col-sm-10">
      {{textarea value=controller.article_content placeholder="Content Article" class="form-control" rows="4"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-blue btn-default">Submit Article</button>
    </div>
  </div>
</form>