<div class="page-header">
  <div class="container text-center">
    <h1>Blog</h1>
  </div>
</div>

<div class="container pt-20">
  <div class="row">
    <div class="col-md-8">
      {{#each controller}}
          <article class="post">
            <div class="post-number">
              <div class="number">{{id}}</div>
            </div>
            <div class="post-title">
              {{#link-to 'article' this}}
                <h2>{{title}}</h2>
              {{/link-to}}
            </div>
            <div class="clearfix"></div>
            <div class="post-content">
              {{content}}
            </div>
          </article>
      {{/each}}
    </div>
    <div class="col-md-4">
      <div class="blog-pane pane-1">
        <h4>Subscribers</h4>
      </div>
    </div>
  </div>
</div>