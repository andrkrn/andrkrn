<div class="page-header">
  <div class="container text-center">
    <h1>Blog</h1>
  </div>
</div>

<div class="container pt-20">
  <div class="row">
    <div class="col-md-8">
      {{#each controller}}
          <article class="post">
            <div class="post-title">
              {{#link-to 'article' this}}
                <h2>{{title}}</h2>
                <p class="post-details">Posted by Owner on {{created_at}}</p>
              {{/link-to}}
            </div>
            <div class="post-details">
              Posted by Owner, 2 Sep 2014
            </div>
            <div class="clearfix"></div>
            <div class="post-content">
              {{content}}
            </div>
            <div class="post-footer">
              <div class="post-footer-items">
                <div class="col-sm-3">
                  <div class="number">123</div>Viewed
                </div>
                <div class="col-sm-3">
                  <div class="number">213</div>Likes
                </div>
                <div class="col-sm-3">
                  <div class="number">121</div>Comment
                </div>
                <div class="col-sm-3">
                  <div class="number">234</div>Share
                </div>
              </ul>
            </div>
          </article>
      {{/each}}
    </div>
    <div class="col-md-4">
      <div class="blog-pane pane-1">
        <h4>Subscribers</h4>
      </div>
    </div>
  </div>
</div>