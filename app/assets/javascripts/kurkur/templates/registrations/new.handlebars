<div class="page-header-2">
  <div class="container text-center">
    <h1>Register</h1>
  </div>
</div>
<div class="container pt-20" style="min-height: 338px;">
  <form {{action "registerUser" on="submit"}}>
    <div style="width: 400px; margin: 50px auto 0;">
      {{#if errors}}
        <div class="alert alert-danger alert-dismissible">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          Invalid email or password
        </div>
      {{/if}}
      <div class="form-group">
        <label>Name</label>
        {{input type="text" value=controller.name placeholder="Name" class="form-control"}}
      </div>
      <div class="form-group">
        <label>Email</label>
        {{input type="text" value=controller.email placeholder="Email" class="form-control"}}
      </div>
      <div class="form-group">
        <label>Password</label>
        {{input type="password" value=controller.password placeholder="Password" class="form-control"}}
      </div>
      <div class="form-group">
        <label>Password Confirmation</label>
        {{input type="password" value=controller.password placeholder="Password Confirmation" class="form-control"}}
      </div>
      <div class="form-group">
        <button class="btn btn-default btn-blue btn-block" type="submit">Submit</button>
      </div>
    </div>
  </form>
</div>